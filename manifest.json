{
  "manifest_version": 3,
  "name": "Amazon Product Info",
  "version": "1.0",
  "description": "Display ASIN and title of the product",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.amazon.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {}
}